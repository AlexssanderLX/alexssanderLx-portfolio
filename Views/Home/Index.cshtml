@{
    ViewData["Title"] = "Home Page";
}

<div class="home-wrapper">
    <div class="hero-card">

        <div class="hero-image">
            <img src="/img/AnselmoHome.png" alt="Anselmo Alves">
        </div>

        <div class="hero-content">
            <h1 class="hero-title">Anselmo Alves</h1>
            <p class="hero-subtitle">
                Engenharia aplicada com foco em planejamento, execução e soluções técnicas eficientes.
            </p>
        </div>

    </div>
</div>

<style>
    /* Wrapper central */
    .home-wrapper {
        display: flex;
        justify-content: center;
        padding: 80px 20px;
    }

    /* Card principal */
    .hero-card {
        display: grid;
        grid-template-columns: 1.1fr 1fr;
        max-width: 1100px;
        width: 100%;
        border-radius: 22px;
        overflow: hidden;
        background: rgba(15, 20, 30, 0.85);
        backdrop-filter: blur(6px);
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.45);
        border: 1px solid rgba(255, 255, 255, 0.08);
    }

    /* Foto */
    .hero-image {
        position: relative;
    }

        .hero-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: grayscale(20%) contrast(1.05);
        }

        .hero-image::after {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient( to right, rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.65) );
        }

    /* Conteúdo */
    .hero-content {
        padding: 60px 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 25px;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        letter-spacing: 1px;
        color: #e9f6ff;
        margin: 0;
    }

    .hero-subtitle {
        font-size: 1.3rem;
        line-height: 1.6;
        color: #b8d8ff;
        max-width: 420px;
    }

    /* Responsivo */
    @@media (max-width: 900px) {
        .hero-card {
            grid-template-columns: 1fr;
        }

        .hero-content {
            padding: 40px 30px;
            text-align: center;
            align-items: center;
        }

        .hero-subtitle {
            max-width: none;
        }
    }
</style>
