@{
    ViewData["Title"] = "Home";
}

<section class="home" id="home">
    <div class="hero">

        <div class="hero-left">
            <div class="hero-photo">
                <img src="/img/Foto de Perfil.jpeg" alt="Foto de perfil">
            </div>
        </div>

        <div class="hero-right">
            <p class="hero-kicker">Developer • Pentester • Pianist/Composer</p>

            <h1 class="hero-title">
                Alexssander Ferreira de Almeida
            </h1>

            <p class="hero-subtitle">
                <h4>"I create. I observe. I feel.""</h4>
                I build systems with logic and structure.
                I analyze like an attacker to strengthen the defense.
                I transform discipline and perception into real solutions.
            </p>

            <div class="hero-actions">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Projects">View projects</a>
                <a class="btn" asp-controller="Home" asp-action="Contact">Contact</a>
            </div>

            <div class="hero-pillars">
                <div class="pillar card card-hover">
                    <h3>Dev</h3>
                    <p>Software Engineering</p>
                </div>

                <div class="pillar card card-hover">
                    <h3>Pentest</h3>
                    <p>Security & Offensive Thinking</p>
                </div>

                <div class="pillar card card-hover">
                    <h3>Piano</h3>
                    <p>Pianist • Composer</p>
                </div>
            </div>


            <div class="hero-chips">
                <span class="chip">Real projects</span>
                <span class="chip">Clean architecture</span>
                <span class="chip">Offensive Thinking</span>
            </div>
        </div>

    </div>
</section>

<style>
    /* =========================
       HOME
       ========================= */
    .home {
        padding: 24px 0;
    }

    /* grid */
    .hero {
        width: min(1100px, 92%);
        margin: 0 auto;
        display: grid;
        grid-template-columns: 0.95fr 1.05fr;
        gap: 22px;
        background: rgba(15, 23, 42, 0.40);
        border: 1px solid rgba(148, 163, 184, 0.16);
        border-radius: 18px;
        box-shadow: 0 18px 45px rgba(0,0,0,0.45);
        overflow: hidden;
    }

    /* lado da foto */
    .hero-left {
        position: relative;
        min-height: 420px;
    }

    .hero-photo {
        position: absolute;
        inset: 0;
    }

        .hero-photo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: grayscale(12%) contrast(1.05);
        }

    /* overlay sutil tech */
    .hero-left::after {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(600px 450px at 30% 20%, rgba(59,130,246,0.25), transparent 55%), linear-gradient(to right, rgba(0,0,0,0.10), rgba(0,0,0,0.55));
    }

    /* conteúdo */
    .hero-right {
        padding: 44px 34px;
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    /* texto */
    .hero-kicker {
        margin: 0;
        color: rgba(226,232,240,0.72);
        letter-spacing: .14em;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .hero-title {
        margin: 0;
        font-size: 2.8rem;
        line-height: 1.05;
        font-weight: 850;
        letter-spacing: .2px;
        color: #e2e8f0;
    }

    .hero-subtitle {
        margin: 0;
        color: rgba(226,232,240,0.78);
        font-size: 1.15rem;
        line-height: 1.6;
        max-width: 62ch;
    }

    /* actions */
    .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 8px;
    }

    /* (usa os .btn do teu site.css refatorado) */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 14px;
        border-radius: 14px;
        font-weight: 750;
        text-decoration: none;
        color: #e2e8f0;
        background: rgba(148,163,184,0.10);
        border: 1px solid rgba(148,163,184,0.16);
        transition: transform .15s ease, background .15s ease, border-color .15s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
            background: rgba(148,163,184,0.14);
        }

    .btn-primary {
        background: rgba(59,130,246,0.18);
        border-color: rgba(59,130,246,0.30);
    }

        .btn-primary:hover {
            background: rgba(59,130,246,0.26);
        }

    /* pilares */
    .hero-pillars {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
        margin-top: 10px;
    }

    .pillar {
        padding: 14px 14px;
        border-radius: 16px;
        background: rgba(15, 23, 42, 0.65);
        border: 1px solid rgba(148,163,184,0.16);
    }

        .pillar h3 {
            margin: 0 0 6px 0;
            font-size: 1.05rem;
            font-weight: 850;
            letter-spacing: .2px;
        }

        .pillar p {
            margin: 0;
            color: rgba(226,232,240,0.72);
            font-size: 0.95rem;
            line-height: 1.35;
        }

    /* chips */
    .hero-chips {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 6px;
    }

    .chip {
        display: inline-flex;
        padding: 8px 10px;
        border-radius: 999px;
        font-weight: 650;
        font-size: .9rem;
        color: rgba(226,232,240,0.92);
        background: rgba(148,163,184,0.10);
        border: 1px solid rgba(148,163,184,0.16);
    }

    /* responsivo */
    @@media (max-width: 980px) {
        .hero {
            grid-template-columns: 1fr;
        }

        .hero-left {
            min-height: 320px;
        }

        .hero-right {
            padding: 34px 22px;
            text-align: center;
            align-items: center;
        }

        .hero-pillars {
            grid-template-columns: 1fr;
            width: 100%;
        }

        .hero-subtitle {
            max-width: none;
        }

        .hero-actions {
            justify-content: center;
        }

        .hero-chips {
            justify-content: center;
        }
    }
</style>

