@{
    ViewData["Title"] = "About Page";
}

<div class="about-wrapper">
    <div class="about-card">

        <!-- HERO -->
        <header class="hero">
            <h1 class="hero-title">About Me</h1>
            <p class="hero-sub">
                Engineering-focused professional portfolio built for clarity, credibility, and consistent delivery.
                This page is structured as a landing to demonstrate flow, hierarchy, and responsiveness.
            </p>

            <div class="hero-badges">
                <span class="badge">Engineering</span>
                <span class="badge badge-soft">Planning</span>
                <span class="badge badge-soft">Execution</span>
                <span class="badge badge-soft">Technical Solutions</span>
            </div>
        </header>

        <!-- QUICK SUMMARY GRID -->
        <section class="section">
            <h2 class="section-title">At a glance</h2>

            <div class="grid-3">
                <div class="info-card">
                    <h3>Focus</h3>
                    <p>
                        Practical engineering with emphasis on planning, quality control, and efficient solutions.
                        Clear communication, reliable delivery, and attention to detail.
                    </p>
                </div>

                <div class="info-card">
                    <h3>How I work</h3>
                    <p>
                        Defined scope → measurable milestones → transparent progress.
                        Documentation and alignment to reduce rework and increase predictability.
                    </p>
                </div>

                <div class="info-card">
                    <h3>What you can expect</h3>
                    <p>
                        A professional approach, organized workflow, and objective technical decisions.
                        Built for trust: process, records, and structured delivery.
                    </p>
                </div>
            </div>
        </section>

        <!-- STORY / JOURNEY -->
        <section class="section">
            <h2 class="section-title">Journey</h2>

            <div class="content-box">
                <p class="lead">
                    I build solutions with an engineering mindset: diagnose the context, define constraints,
                    establish a plan, and execute with precision. This page includes expanded sections so the
                    website behaves like a true landing page.
                </p>

                <div class="timeline">
                    <div class="tl-item">
                        <div class="tl-dot"></div>
                        <div class="tl-content">
                            <h4>Foundation</h4>
                            <p>
                                Solid base in engineering concepts, technical responsibility, and structured problem solving.
                                Strong preference for clarity and measurable outcomes.
                            </p>
                        </div>
                    </div>

                    <div class="tl-item">
                        <div class="tl-dot"></div>
                        <div class="tl-content">
                            <h4>Practical evolution</h4>
                            <p>
                                Continuous improvement through real projects, documenting decisions, validating assumptions,
                                and aligning execution with constraints: budget, timeline, and safety.
                            </p>
                        </div>
                    </div>

                    <div class="tl-item">
                        <div class="tl-dot"></div>
                        <div class="tl-content">
                            <h4>Professional positioning</h4>
                            <p>
                                A portfolio designed to communicate capability, process, and credibility.
                                This site is built for prospecting and professional presentation.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- EXPERTISE -->
        <section class="section">
            <h2 class="section-title">Core expertise</h2>

            <div class="grid-2">
                <div class="info-card">
                    <h3>Planning & scope</h3>
                    <ul class="bullets">
                        <li>Scope definition and prioritization</li>
                        <li>Milestones and delivery checkpoints</li>
                        <li>Risk assessment and constraint mapping</li>
                        <li>Documentation to reduce rework</li>
                    </ul>
                </div>

                <div class="info-card">
                    <h3>Execution & quality</h3>
                    <ul class="bullets">
                        <li>Quality control routines</li>
                        <li>Technical decisions with traceability</li>
                        <li>Clear progress updates</li>
                        <li>Efficiency without compromising standards</li>
                    </ul>
                </div>
            </div>

            <div class="grid-3 mt">
                <div class="mini-card">
                    <h4>Method</h4>
                    <p>Structured workflow with checkpoints and clear communication.</p>
                </div>
                <div class="mini-card">
                    <h4>Precision</h4>
                    <p>Focus on consistency, measurable outcomes, and reliable delivery.</p>
                </div>
                <div class="mini-card">
                    <h4>Responsibility</h4>
                    <p>Technical reasoning, documentation, and attention to safety.</p>
                </div>
            </div>
        </section>

        <!-- PROCESS -->
        <section class="section">
            <h2 class="section-title">Work process</h2>

            <div class="steps">
                <div class="step">
                    <div class="step-num">1</div>
                    <div class="step-body">
                        <h3>Understand</h3>
                        <p>Collect context, requirements, constraints, and priorities to avoid wrong assumptions.</p>
                    </div>
                </div>

                <div class="step">
                    <div class="step-num">2</div>
                    <div class="step-body">
                        <h3>Plan</h3>
                        <p>Define scope, milestones, and a clear execution path. Document decisions for alignment.</p>
                    </div>
                </div>

                <div class="step">
                    <div class="step-num">3</div>
                    <div class="step-body">
                        <h3>Execute</h3>
                        <p>Deliver step-by-step with quality checks and transparent progress reporting.</p>
                    </div>
                </div>

                <div class="step">
                    <div class="step-num">4</div>
                    <div class="step-body">
                        <h3>Validate</h3>
                        <p>Confirm outcomes against scope. Improve through feedback and finalized documentation.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- VALUES -->
        <section class="section">
            <h2 class="section-title">Values</h2>

            <div class="grid-2">
                <div class="content-box">
                    <h3 class="subhead">Clarity</h3>
                    <p>
                        I prioritize clear communication, objective expectations, and transparent progress.
                        Good work should be easy to understand and easy to trust.
                    </p>

                    <h3 class="subhead">Consistency</h3>
                    <p>
                        Reliable delivery is built through a stable process, not improvisation.
                        The goal is predictable outcomes and minimized rework.
                    </p>
                </div>

                <div class="content-box">
                    <h3 class="subhead">Quality</h3>
                    <p>
                        Quality is not just finishing — it’s finishing with standards, documentation, and responsibility.
                        Decisions must be traceable and technically grounded.
                    </p>

                    <h3 class="subhead">Efficiency</h3>
                    <p>
                        Efficiency means doing the right things first, with minimal waste.
                        Planning saves time; structure prevents rework.
                    </p>
                </div>
            </div>
        </section>

        <!-- CERTIFICATIONS / SKILLS (PLACEHOLDER) -->
        <section class="section">
            <h2 class="section-title">Credentials & highlights</h2>

            <div class="grid-3">
                <div class="info-card">
                    <h3>Education</h3>
                    <p class="muted">Placeholder</p>
                    <ul class="bullets">
                        <li>Engineering degree (details to be added)</li>
                        <li>Complementary courses (to be added)</li>
                        <li>Academic highlights (optional)</li>
                    </ul>
                </div>

                <div class="info-card">
                    <h3>Tools</h3>
                    <p class="muted">Placeholder</p>
                    <ul class="bullets">
                        <li>Technical documentation</li>
                        <li>Planning frameworks</li>
                        <li>Quality check routines</li>
                        <li>Reporting & alignment</li>
                    </ul>
                </div>

                <div class="info-card">
                    <h3>Areas</h3>
                    <p class="muted">Placeholder</p>
                    <ul class="bullets">
                        <li>Planning & scope</li>
                        <li>Execution support</li>
                        <li>Technical consulting</li>
                        <li>Process improvement</li>
                    </ul>
                </div>
            </div>
        </section>

        <!-- FAQ -->
        <section class="section">
            <h2 class="section-title">FAQ</h2>

            <div class="faq">
                <details class="faq-item" open>
                    <summary>What kind of work do you take?</summary>
                    <p>
                        Projects that benefit from structured planning, technical execution, and objective decision-making.
                        The scope is aligned first; delivery follows the plan.
                    </p>
                </details>

                <details class="faq-item">
                    <summary>How do you handle changes in scope?</summary>
                    <p>
                        Changes are documented, assessed for impact (time/cost/risk), and only then integrated.
                        This keeps delivery predictable and avoids hidden rework.
                    </p>
                </details>

                <details class="faq-item">
                    <summary>Do you provide documentation?</summary>
                    <p>
                        Yes — the workflow prioritizes clarity and traceability.
                        Documentation helps alignment, reduces errors, and supports decision quality.
                    </p>
                </details>
            </div>
        </section>

        <!-- CTA -->
        <section class="cta">
            <div class="cta-inner">
                <h2>Ready to move forward?</h2>
                <p>
                    If you need a professional approach with structured delivery and technical responsibility,
                    reach out and let’s align on scope and next steps.
                </p>

                <div class="cta-actions">
                    <a class="btn" href="/Home/Contact">Contact</a>
                    <a class="btn btn-ghost" href="/Home/Index">Back to Home</a>
                </div>
            </div>
        </section>

    </div>
</div>

<style>
    /* Wrapper central */
    .about-wrapper {
        display: flex;
        justify-content: center;
        padding: 45px 15px 70px;
    }

    /* CARD PRINCIPAL */
    .about-card {
        max-width: 1050px;
        width: 100%;
        border-radius: 20px;
        border: 2px solid #003a6b;
        box-shadow: 0 0 18px rgba(0, 170, 255, 0.20);
        backdrop-filter: blur(3px);
        /* mantém teu padrão, mas mais premium */
        background: rgba(255, 255, 255, 0.92);
        padding: 38px 30px;
    }

    /* Título neon (mantendo estilo) */
    .neon-title {
        background-color: #001a33;
        color: #00eaff;
        padding: 15px 25px;
        text-align: center;
        font-size: 2.7rem;
        font-weight: 800;
        border: 2px solid #0077cc;
        border-radius: 12px;
        margin-bottom: 18px;
        text-shadow: 0 0 5px #00eaff, 0 0 10px #00eaff, 0 0 18px #00eaff, 0 0 32px #0088cc;
        box-shadow: 0 0 10px #005e99, inset 0 0 10px #003a6b;
    }

    /* HERO REFINADO */
    .hero {
        text-align: center;
        margin-bottom: 28px;
        padding: 22px 18px 26px;
        border-radius: 16px;
        background: #ffffff;
        border: 1px solid #cfd6e1;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    }

    .hero-title {
        margin: 0 0 10px;
        font-size: 2.6rem;
        font-weight: 900;
        color: #0b2238;
        letter-spacing: 0.5px;
    }

    .hero-sub {
        margin: 0 auto 14px;
        max-width: 820px;
        font-size: 1.1rem;
        line-height: 1.75;
        color: #213043;
    }

    .hero-badges {
        margin-top: 16px;
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        padding: 8px 12px;
        border-radius: 999px;
        font-weight: 700;
        font-size: 0.95rem;
        color: #082338;
        background: rgba(0, 234, 255, 0.18);
        border: 1px solid rgba(0, 234, 255, 0.35);
    }

    .badge-soft {
        background: rgba(0, 119, 204, 0.10);
        border-color: rgba(0, 119, 204, 0.20);
        color: #0b2b45;
    }

    /* SECTIONS */
    .section {
        margin-top: 28px;
        padding-top: 10px;
    }

    .section-title {
        font-size: 1.65rem;
        font-weight: 900;
        color: #0b2238;
        margin: 0 0 14px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    }

    .content-box {
        background: #ffffff;
        border: 1px solid #cfd6e1;
        border-radius: 14px;
        padding: 22px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    }

    .lead {
        font-size: 1.1rem;
        line-height: 1.85;
        color: #223246;
        margin: 0 0 16px;
    }

    .subhead {
        margin: 0 0 8px;
        font-size: 1.2rem;
        font-weight: 900;
        color: #0b2b45;
    }

    .muted {
        margin-top: -6px;
        color: #56708a;
        font-size: 0.95rem;
    }

    /* GRIDS */
    .grid-2, .grid-3 {
        display: grid;
        gap: 16px;
    }

    .grid-2 {
        grid-template-columns: repeat(2, 1fr);
    }

    .grid-3 {
        grid-template-columns: repeat(3, 1fr);
    }

    .mt {
        margin-top: 16px;
    }

    .info-card, .mini-card {
        background: #ffffff;
        border: 1px solid #cfd6e1;
        border-radius: 14px;
        padding: 18px 18px 16px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    }

        .info-card h3 {
            margin: 0 0 10px;
            font-size: 1.2rem;
            font-weight: 900;
            color: #0b2b45;
        }

        .mini-card h4 {
            margin: 0 0 8px;
            font-size: 1.08rem;
            font-weight: 900;
            color: #0b2b45;
        }

        .info-card p, .mini-card p {
            margin: 0;
            font-size: 1.03rem;
            line-height: 1.75;
            color: #223246;
        }

    /* BULLETS */
    .bullets {
        margin: 10px 0 0;
        padding-left: 18px;
        color: #223246;
        line-height: 1.75;
    }

        .bullets li {
            margin-bottom: 6px;
        }

    /* TIMELINE */
    .timeline {
        margin-top: 10px;
        display: grid;
        gap: 14px;
    }

    .tl-item {
        display: grid;
        grid-template-columns: 18px 1fr;
        gap: 12px;
        align-items: start;
    }

    .tl-dot {
        width: 14px;
        height: 14px;
        border-radius: 999px;
        margin-top: 6px;
        background: rgba(0, 234, 255, 0.9);
        box-shadow: 0 0 10px rgba(0, 234, 255, 0.55);
        border: 2px solid rgba(0, 119, 204, 0.55);
    }

    .tl-content h4 {
        margin: 0 0 6px;
        font-size: 1.1rem;
        font-weight: 900;
        color: #0b2b45;
    }

    .tl-content p {
        margin: 0;
        color: #223246;
        line-height: 1.75;
        font-size: 1.03rem;
    }

    /* STEPS */
    .steps {
        display: grid;
        gap: 12px;
    }

    .step {
        background: #ffffff;
        border: 1px solid #cfd6e1;
        border-radius: 14px;
        padding: 16px;
        display: grid;
        grid-template-columns: 46px 1fr;
        gap: 14px;
        align-items: start;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    }

    .step-num {
        width: 42px;
        height: 42px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        font-weight: 900;
        color: #0b2238;
        background: rgba(0, 234, 255, 0.18);
        border: 1px solid rgba(0, 234, 255, 0.35);
    }

    .step-body h3 {
        margin: 0 0 6px;
        font-size: 1.15rem;
        font-weight: 900;
        color: #0b2b45;
    }

    .step-body p {
        margin: 0;
        color: #223246;
        line-height: 1.75;
        font-size: 1.03rem;
    }

    /* FAQ */
    .faq {
        display: grid;
        gap: 10px;
    }

    .faq-item {
        background: #ffffff;
        border: 1px solid #cfd6e1;
        border-radius: 14px;
        padding: 12px 14px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    }

        .faq-item summary {
            cursor: pointer;
            font-weight: 900;
            color: #0b2b45;
            font-size: 1.05rem;
            outline: none;
        }

        .faq-item p {
            margin: 10px 0 4px;
            color: #223246;
            line-height: 1.75;
            font-size: 1.03rem;
        }

    /* CTA */
    .cta {
        margin-top: 32px;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid rgba(0, 119, 204, 0.25);
        box-shadow: 0 0 18px rgba(0, 170, 255, 0.18);
        background: linear-gradient(135deg, rgba(0, 26, 51, 0.98), rgba(0, 58, 107, 0.90));
    }

    .cta-inner {
        padding: 28px 22px;
        text-align: center;
        color: #e9f6ff;
    }

        .cta-inner h2 {
            margin: 0 0 8px;
            font-size: 1.85rem;
            font-weight: 900;
            letter-spacing: 0.2px;
        }

        .cta-inner p {
            margin: 0 auto 14px;
            max-width: 820px;
            line-height: 1.75;
            font-size: 1.06rem;
            color: rgba(233, 246, 255, 0.92);
        }

    .cta-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 10px;
    }

    .btn {
        display: inline-block;
        padding: 11px 16px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 900;
        color: #071a2a;
        background: rgba(0, 234, 255, 0.95);
        border: 1px solid rgba(0, 234, 255, 0.55);
        box-shadow: 0 0 14px rgba(0, 234, 255, 0.22);
    }

        .btn:hover {
            filter: brightness(0.98);
        }

    .btn-ghost {
        background: rgba(255, 255, 255, 0.08);
        color: #e9f6ff;
        border: 1px solid rgba(255, 255, 255, 0.20);
        box-shadow: none;
    }

        .btn-ghost:hover {
            background: rgba(255, 255, 255, 0.11);
        }

    /* RESPONSIVIDADE */
    @@media (max-width: 950px) {
        .grid-3 {
            grid-template-columns: 1fr;
        }

        .grid-2 {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 600px) {
        .about-card {
            padding: 24px 14px;
        }

        .neon-title {
            font-size: 2rem;
            padding: 10px 15px;
        }

        .hero-sub {
            font-size: 1.05rem;
        }

        .section-title {
            font-size: 1.4rem;
        }

        .step {
            grid-template-columns: 1fr;
        }

        .step-num {
            width: 44px;
            height: 44px;
        }
    }
</style>
