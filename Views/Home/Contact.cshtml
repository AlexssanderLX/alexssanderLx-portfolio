@{
    ViewData["Title"] = "Contact Page";
}

<div class="page-card">

    <div class="neon-title-contact">
        Contact Me
    </div>

    <div class="contact-grid">

        <div class="contact-card whatsapp">
            <h3>📞 WhatsApp</h3>
            <p>Aqui vai o QR Code + número + descrição.</p>
        </div>

        <div class="contact-card instagram">
            <h3>📸 Instagram</h3>
            <p>Prévia do feed, destaque do cliente, bio etc.</p>
        </div>

        <div class="contact-card linkedin">
            <h3>💼 LinkedIn</h3>
            <p>Breve resumo sobre o perfil profissional dele.</p>
        </div>

        <div class="contact-card email">
            <h3>✉️ Email</h3>
            <p>Formulário de contato ou call to action.</p>
        </div>

    </div>
</div>


<style>

    /* ======== TÍTULO ======== */
    .neon-title-contact {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 35px;
        font-weight: bold;
        color: #00eaff;
        text-shadow: 0 0 10px #00eaff, 0 0 20px #00eaff;
        animation: neonPulse 2.5s infinite ease-in-out;
    }

    @@keyframes neonPulse {
        0%, 100%

    {
        text-shadow: 0 0 12px #00eaff;
    }

    50% {
        text-shadow: 0 0 30px #00eaff;
    }

    }


    /* ======== GRID DOS CARDS ======== */
    .contact-grid {
        display: grid;
        gap: 30px;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        padding: 10px;
        padding-bottom: 40px;
    }


    /* ======== CARDS ======== */
    .contact-card {
        background: rgba(255, 255, 255, 0.12);
        border: 2px solid rgba(255,255,255,0.18);
        border-radius: 18px;
        padding: 28px;
        min-height: 240px;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        box-shadow: 0 4px 18px rgba(0,0,0,0.3);
        transition: transform 0.3s, box-shadow 0.3s, border-color 0.3s;
    }

        .contact-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.45);
        }


        /* ======== TÍTULO DOS CARDS ======== */
        .contact-card h3 {
            color: #00eaff;
            font-size: 1.6rem;
            margin-bottom: 12px;
            font-weight: 600;
            text-shadow: 0 0 6px #00eaff;
        }


        /* ======== CORES ESPECÍFICAS ======== */
        .contact-card.whatsapp {
            border-color: #25D366;
        }

        .contact-card.instagram {
            border-color: #b82a6e;
        }

        .contact-card.linkedin {
            border-color: #0077b5;
        }

        .contact-card.email {
            border-color: #2e8b57;
        }

</style>
